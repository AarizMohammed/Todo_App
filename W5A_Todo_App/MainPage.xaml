<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="W5A_Todo_App.MainPage"
             Background="Bisque">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            

            <Label
                Text="Todo App"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center"
                TextColor="Black"/>

            <Entry
                x:Name="Task Entry"
                Placeholder="Enter a task"
                FontSize="20"
                TextColor="Black"
                BackgroundColor="White"
                />

            <Button
                x:Name="EnterTaskButton"
                Text="Add Task"
                TextColor="Black"
                FontSize="20"
                Clicked="EnterTaskButton_Clicked"
                />

            

            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

